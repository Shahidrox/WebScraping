<div class="panel panel-info">
	<div class="panel-heading">
	    <% if @merchants.present?%>
		    <b class="panel-title">Data Update Time:</b> <%= @merchants.first.updated_at.strftime("%Y/%m/%d %I:%M %P") %>: <%= ActiveSupport::TimeZone[Time.zone.name] %>
		<% end %>
	</div>
</div>

<table class="table table-hover" id="table">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Ecodes available</th>
            <th>Max Savings</th>
            <th>Average Savings</th>
            <th>Cards Available</th>
        </tr>
    </thead>
    <tbody>
        <% count = ( (params[:page] || 1).to_i - 1) * 10%>
        <% @merchants.each_with_index do |f, index| %>
            <tr>
                <td>
                    <%= count + index + 1 %>
                </td>
                <td>
                    <%= f.name %>
                </td>
                <td>
                    <%= f.ecodes_available%>
                </td>
                <td>
                    <%=f.max_savings %>
                </td>
                <td>
                    <%=f.average_savings %>
                </td>
                <td>
                    <%=f.cards_available %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<div class="col-lg-12" style="text-align: center;">
    <%= paginate @merchants, :theme=> 'twitter-bootstrap-3', :pagination_class => "pagination-sm" %>
</div>
